@model bool
@{
    ViewBag.Title = "Welcome";
}
<div class="row row-centered">
    <div class="col-md-7 col-centered">
        @Html.Partial("_logo")
    </div>
</div>
<div class="row row-centered">
    <div class="col-md-7 col-centered">
        @if (Model)
        {
            <h2>Registration Successful</h2>
            <div class="row">
                <div class="col-md-1">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                </div>

                <div class="col-md-11">
                    <p>
                        Your account has been verified against the electoral roll, and you can now vote.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="@Url.Action("Index","Bills")" class="btn btn-primary btn-lg btn-default">Vote now!</a>
                </div>
            </div>
        }
        else
        {
            <h2>Registration Successful, but...</h2>
            <div class="row">
                <div class="col-md-2">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </div>
                <div class="col-md-10">
                    <p>
                        Your account has not been verified against the electoral roll, you votes will only count towards opinion polls.
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="@Url.Action("Index","Bills")" class="btn btn-primary btn-lg btn-default">Vote now!</a>
                </div>
            </div>
        }
    </div>
</div>



